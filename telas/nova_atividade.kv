#:include telas/menu_bar.kv
#:set cor_fonte (0, 0, 0, 1)
#:set larg_txt_input 300
#:set larg_label 100
#:set alin_label 'left'
#:set lista_meses ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro' ]

<NovaAtividade>:
    txt_pub: txt_pub
    txt_video: txt_video
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        MenuBar:
        BoxLayout:
            orientation: 'vertical'
            size_hint: .8, 1
            padding: 8, 16, 8, 8                                              
            Label:
                text:'Nome: Gilberto Araujo Gomes Junior'
                text_size: self.width, None
                size: self.texture_size
                size_hint_y: .50
                halign: 'center'
                color: cor_fonte
                font_size: '30sp'
            StackLayout:
                orientation: 'lr-tb'
                padding: 115, 0, 8, 0
                spacing: 6
                size_hint_y: .18                
                Spinner:
                    text: 'Mes'
                    values: lista_meses
                    size_hint: .60, 1
                Label:
                    text: 'Ano:'
                    size_hint: .20, 1
                    text_size: self.width, None
                    size: self.texture_size
                    color: cor_fonte
                    halign: 'center'
                TextInput:
                    multiline: False
                    write_tab: False
                    size_hint: .20, 1
            GridLayout:
                cols: 4
                spacing: 8
                padding: 8
                Label:
                    text: 'Publicações'
                    color: cor_fonte
                    text_size: self.width, None
                    size: self.texture_size
                    halign: alin_label
                    size_hint_x: None
                    width: larg_label
                TextInput:
                    id: txt_pub
                    multiline: False
                    write_tab: False
                    size_hint_x: None
                    width: larg_txt_input
                Button:
                    text:'+'
                Button:
                    text:'-'
                Label:
                    text: 'Vídeos'
                    color: cor_fonte
                    text_size: self.width, None
                    size: self.texture_size
                    halign: alin_label
                    size_hint_x: None
                    width: larg_label
                TextInput:
                    id: txt_video
                    multiline: False
                    write_tab: False
                    size_hint_x: None
                    width: larg_txt_input
                Button:
                    text:'+'                    
                Button:
                    text:'-'                    
                Label:
                    text: 'Horas'
                    color: cor_fonte
                    text_size: self.width, None
                    size: self.texture_size
                    halign: alin_label
                    size_hint_x: None
                    width: larg_label
                TextInput:
                    multiline: False
                    write_tab: False
                    size_hint_x: None
                    width: larg_txt_input
                Button:
                    text:'+'
                Button:
                    text:'-'
                Label:
                    text: 'Revisitas'
                    color: cor_fonte
                    text_size: self.width, None
                    size: self.texture_size
                    halign: alin_label
                    size_hint_x: None
                    width: larg_label
                TextInput:
                    multiline: False
                    write_tab: False
                    size_hint_x: None
                    width: larg_txt_input
                Button:
                    text:'+'
                Button:
                    text:'-'
                Label:
                    text: 'Estudos'
                    color: cor_fonte
                    text_size: self.width, None
                    size: self.texture_size
                    halign: alin_label
                    size_hint_x: None
                    width: larg_label
                TextInput:
                    multiline: False
                    write_tab: False
                    size_hint_x: None
                    width: larg_txt_input
                Button:
                    text:'+'
                Button:
                    text:'-'
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                StackLayout:
                    orientation: 'lr-tb'
                    padding: 8
                    spacing: 4
                    size_hint: .6, 1
                    Button:
                        text: 'Salvar'
                        size_hint: None, .20
                        width: 150
                    Button:
                        text: 'Limpar'
                        size_hint: None, .20
                        width: 75
                        
            