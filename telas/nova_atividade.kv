#:include telas/menu_bar.kv
#:set cor_fonte (0, 0, 0, 1)
#:set larg_txt_input 300
#:set larg_label 100
#:set alin_label 'left'
#:set lista_meses ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro' ]

<NovaAtividade>:
    txt_pub: txt_pub    
    txt_video: txt_video
    txt_horas: txt_horas
    txt_revisitas: txt_revisitas
    txt_estudos: txt_estudos
    txt_ano: txt_ano
    txt_dia: txt_dia
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        MenuBar:
        BoxLayout:
            orientation: 'vertical'
            size_hint: .8, 1
            padding: 8, 16, 8, 8                                              
            Label:
                text:'Nome: Gilberto Araujo Gomes Junior'
                text_size: self.width, None
                size: self.texture_size
                size_hint_y: .50
                halign: 'center'
                color: cor_fonte
                font_size: '30sp'
            StackLayout:
                orientation: 'lr-tb'
                padding: 115, 0, 8, 0
                spacing: 6
                size_hint_y: .18
                Label:
                    text: 'Dia'
                    size_hint: .05, 1
                    text_size: self.width, None
                    size: self.texture_size
                    color: cor_fonte
                    halign: 'left'
                DiaInput:
                    id: txt_dia
                    multiline: False
                    write_tab: False
                    size_hint: .10, 1                                   
                Spinner:
                    text: 'Mes'
                    values: lista_meses
                    size_hint: .35, 1
                Label:
                    text: 'Ano:'
                    size_hint: .20, 1
                    text_size: self.width, None
                    size: self.texture_size
                    color: cor_fonte
                    halign: 'center'
                AnoInput:
                    id: txt_ano
                    multiline: False
                    write_tab: False
                    size_hint: .20, 1
            GridLayout:
                cols: 4
                spacing: 8
                padding: 8
                Label:
                    text: 'Publicações'
                    color: cor_fonte
                    text_size: self.width, None
                    size: self.texture_size
                    halign: alin_label
                    size_hint_x: None
                    width: larg_label
                NumberInput:
                    id: txt_pub
                    multiline: False
                    write_tab: False
                    size_hint_x: None
                    width: larg_txt_input
                Button:
                    id: btn_adc_pub
                    text:'+'
                    on_press: root.adicionar_valor(txt_pub)
                Button:
                    text:'-'
                    on_press: root.diminuir_valor(txt_pub)                   
                Label:
                    text: 'Vídeos'
                    color: cor_fonte
                    text_size: self.width, None
                    size: self.texture_size
                    halign: alin_label
                    size_hint_x: None
                    width: larg_label
                NumberInput:
                    id: txt_video
                    multiline: False
                    write_tab: False
                    size_hint_x: None
                    width: larg_txt_input
                Button:
                    text:'+' 
                    on_press: root.adicionar_valor(txt_video)                  
                Button:
                    text:'-'
                    on_press: root.diminuir_valor(txt_video)                    
                Label:
                    text: 'Horas'
                    color: cor_fonte
                    text_size: self.width, None
                    size: self.texture_size
                    halign: alin_label
                    size_hint_x: None
                    width: larg_label
                NumberInput:
                    id: txt_horas
                    multiline: False
                    write_tab: False
                    size_hint_x: None
                    width: larg_txt_input
                Button:
                    text:'+'
                    on_press: root.adicionar_valor(txt_horas)
                Button:
                    text:'-'
                    on_press: root.diminuir_valor(txt_horas)
                Label:
                    text: 'Revisitas'
                    color: cor_fonte
                    text_size: self.width, None
                    size: self.texture_size
                    halign: alin_label
                    size_hint_x: None
                    width: larg_label
                NumberInput:
                    id: txt_revisitas
                    multiline: False
                    write_tab: False
                    size_hint_x: None
                    width: larg_txt_input
                Button:
                    text:'+'
                    on_press: root.adicionar_valor(txt_revisitas)
                Button:
                    text:'-'
                    on_press: root.diminuir_valor(txt_revisitas)
                Label:
                    text: 'Estudos'
                    color: cor_fonte
                    text_size: self.width, None
                    size: self.texture_size
                    halign: alin_label
                    size_hint_x: None
                    width: larg_label
                NumberInput:
                    id: txt_estudos
                    multiline: False
                    write_tab: False
                    size_hint_x: None
                    width: larg_txt_input
                Button:
                    text:'+'
                    on_press: root.adicionar_valor(txt_estudos)
                Button:
                    text:'-'
                    on_press: root.diminuir_valor(txt_estudos)
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                StackLayout:
                    orientation: 'lr-tb'
                    padding: 8
                    spacing: 4
                    size_hint: .6, 1
                    Button:
                        text: 'Salvar'
                        size_hint: None, .20
                        width: 150
                    Button:
                        text: 'Limpar'
                        size_hint: None, .20
                        width: 75
                        on_press: root.zera_valores()
                        
            