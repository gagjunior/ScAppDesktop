#:set cor_fonte (0, 0, 0, 1)

<Login>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:            
            orientation: 'vertical'
            size_hint: .4, .6
            padding: 4, 100, 4, 20           
            Label:
                text: 'ScApp-Login'
                text_size: self.size
                valign: 'middle'
                halign: 'center'
                color: cor_fonte
                font_size: '30sp'
            Label:
                text: 'E-mail:'
                text_size: self.size
                halign: 'left'
                color: cor_fonte
            TextInput:
                multiline: False
                write_tab: False
            Label:
                text: 'Senha:'
                text_size: self.size
                halign: 'left'
                color: cor_fonte
            TextInput:
                multiline: False
                write_tab: False
                password: True
            BoxLayout:                
                size_hint: 1, .3
            Button:
                text: 'Acessar'
            Label:
                text: 'Primeiro acesso clique no link abaixo para criar seu perfil'
                text_size: self.size
                halign: 'left'
                color: cor_fonte