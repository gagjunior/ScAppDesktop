#:set cor_fonte (0, 0, 0, 1)

<Cadastro>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size     
        BoxLayout:
            orientation: 'vertical'
            size_hint: .5, .8
            padding: 4, 40, 4, 10           
            Label:
                text: 'Cadastro de usuário'
                text_size: self.width, None
                size: self.texture_size
                halign: 'left'
                color: cor_fonte
                font_size: '30sp'
            Label:
                text: 'Nome:'
                text_size: self.size
                halign: 'left'
                color: cor_fonte
            TextInput:
                multiline: False
                write_tab: False                
            Label:
                text: 'E-mail:'
                text_size: self.size
                halign: 'left'
                color: cor_fonte
            TextInput:
                multiline: False
                write_tab: False                
            Label:
                text: 'Senha:'
                color: cor_fonte
                text_size: self.size
                halign: 'left'
            TextInput:
                multiline: False
                write_tab: False
                password: True                
            Label:
                text: 'Confirmmar senha:'
                color: cor_fonte
                text_size: self.size
                halign: 'left'
            TextInput:
                multiline: False
                write_tab: False
                password: True                
            BoxLayout:                
                size_hint: 1, .3          
            Button:
                text: 'Salvar'
            BoxLayout:                
                size_hint: 1, .3
            Label:
                text: 'Já se cadastrou? Clique [ref=aqui][b][color=0000ff]aqui[/color][/b][/ref] para voltar à tela de login'
                text_size: self.width, None
                size: self.texture_size
                halign: 'left'
                color: cor_fonte
                markup: True
                on_ref_press: root.tela_login()